---
import logo from '../images/desktop/logo.png';
---

<style>
  a {
    color: hsl(0, 0%, 100%);
  }
  #navbar {
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 10%;
    box-sizing: border-box;
  }
  #navbar > nav {
    display: flex;
    width: 100%;
    height: auto;
    justify-content: center;
    align-items: center;
  }
  #navbar > nav > .nav-custom {
    display: flex;
    width: 95%;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 30px 0 6px 0px;
  }
  .title-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
  }
  .title-list > li {
    padding-right: 72px;
  }
</style>

<navbar id="navbar">
  <nav>
    <div class="nav-custom">
      <span id="logo">
        <img src={logo} alt="" />
      </span>
      <button type="button" class="icon-nav" hidden>
        <img class="humberger-icon" src={logo} />
      </button>
      <ul class="title-list">
        <li>
          <a href="#">About</a>
        </li>
        <li>
          <a href="#">Services</a>
        </li>
        <li>
          <a href="#">Projects</a>
        </li>
        <li>
          <button type="button" class="btn btn-contacts"> CONTACT</button>
        </li>
      </ul>
    </div>
  </nav>
</navbar>
